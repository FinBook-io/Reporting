#parse("/template/admin/layout.vm")
#@mainLayout()

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Invoices</h1>
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <!--<div class="container-fluid">-->
        <!-- Main row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with invoices list</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="datatables_list_with_pagination" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Issuer</th>
                                    <th>Receiver</th>
                                    <th>Subtotal</th>
                                    <th>Total Taxes</th>
                                    <th>Total Due</th>
                                </tr>
                            </thead>
                            <tbody>
                                #foreach( $invoice in $invoices )
                                    <tr>
                                        <td>$invoice.invoiceDate</td>
                                        <td>$invoice.issuerName</td>
                                        <td>$invoice.receiverName</td>
                                        <td class="currency">$invoice.subtotal</td>
                                        <td class="currency">$invoice.totalTaxes</td>
                                        <td class="currency">$invoice.totalDue</td>
                                    </tr>
                                #end
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Date</th>
                                    <th>Issuer</th>
                                    <th>Receiver</th>
                                    <th>Subtotal</th>
                                    <th>Total Taxes</th>
                                    <th>Total Due</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div><!-- /.card-body -->
                </div><!-- /.card -->
            </div><!-- /.column -->
        </div> <!-- /Main row -->
    <!--</div> /.container-fluid -->
</section>

#end

