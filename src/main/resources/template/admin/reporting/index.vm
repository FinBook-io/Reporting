#parse("/template/admin/layout.vm")
#@mainLayout()

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Reporting</h1>
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <!--<div class="container-fluid">-->
    <!-- Main row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Incomes and Refunds per period</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-bordered table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>Period</th>
                            <th>Income taxes</th>
                            <th>Refund taxes</th>
                            <th>Total Taxes Due</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Monthly</td>
                            <td class="currency">$monthlyIncomesTaxes</td>
                            <td class="currency">$monthlyRefundsTaxes</td>
                            <td class="currency">$monthlyTotalTaxesDue</td>
                        </tr>
                        <tr>
                            <td>Trimester</td>
                            <td class="currency">$trimesterIncomesTaxes</td>
                            <td class="currency">$trimesterRefundsTaxes</td>
                            <td class="currency">$trimesterTotalTaxesDue</td>
                        </tr>
                        <tr>
                            <td>Semester</td>
                            <td class="currency">$semesterIncomesTaxes</td>
                            <td class="currency">$semesterRefundsTaxes</td>
                            <td class="currency">$semesterTotalTaxesDue</td>
                        </tr>
                        <tr>
                            <td>Annual</td>
                            <td class="currency">$annualIncomesTaxes</td>
                            <td class="currency">$annualRefundsTaxes</td>
                            <td class="currency">$annualTotalTaxesDue</td>
                        </tr>
                        </tbody>
                    </table>
                </div><!-- /.card-body -->
            </div><!-- /.card -->
        </div><!-- /.column -->
    </div> <!-- /Main row -->
    <!--</div> /.container-fluid -->
</section>


#end
