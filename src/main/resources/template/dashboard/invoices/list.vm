#parse("/template/dashboard/layout.vm")
#@mainLayout()

<h2>Invoices</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>Date</th>
            <th>Issuer</th>
            <th>Receiver</th>
            <th>Subtotal</th>
            <th>Total Taxes</th>
            <th>Total Due</th>
        </tr>
        </thead>
        <tbody>
            #foreach( $invoice in $invoices )
            <tr>
                <td>$invoice.invoiceDate</td>
                <td>$invoice.issuerFullName</td>
                <td>$invoice.receiverFullName</td>
                <td>$invoice.subtotal</td>
                <td>$invoice.totalTaxes</td>
                <td>$invoice.totalDue</td>
            </tr>
            #end
        </tbody>
    </table>
</div>

#end
