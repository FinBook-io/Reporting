#parse("/template/dashboard/layout.vm")
#@mainLayout()

<h2>Products</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>Code</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
            #foreach( $product in $products )
            <tr>
                <td>$product.code</td>
                <td>$product.description</td>
                <td>$product.price</td>
            </tr>
            #end
        </tbody>
    </table>
</div>

#end
