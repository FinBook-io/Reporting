                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-4 col-sm-6 col-12">
                <div class="info-box">
                    <span class="info-box-icon bg-danger"><i class="fas fa-donate"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Refunds - Total taxes</span>
                        <span class="info-box-number">$refunds</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-4 col-sm-6 col-12">
                <div class="info-box">
                    <span class="info-box-icon bg-warning"><i class="fas fa-balance-scale-left"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Refunds - Total taxes</span>
                        <span class="info-box-number">$totalTaxesDue</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
