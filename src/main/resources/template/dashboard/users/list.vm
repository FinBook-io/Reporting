#parse("/template/dashboard/layout.vm")
#@mainLayout()

<h2>Users</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>#</th>
            <th>Full name</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
            #foreach( $user in $users )
            <tr>
                <th>$user.idNumber</th>
                <td>$user.fullName</td>
                <td>$user.email</td>
            </tr>
            #end
        </tbody>
    </table>
</div>

#end
