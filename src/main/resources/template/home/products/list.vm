#parse("/template/home/layout.vm")
#@mainLayout()
    <!--Table-->
    <table id="productList" class="table table-hover table-sm">
        <!--Table head-->
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <!--Table head-->
        <!--Table body-->
        <tbody>
            #foreach( $product in $products )
                <tr>
                    <td>$product.code</td>
                    <td>$product.name</td>
                    <td>$product.price</td>
                    <td>$product.price</td>
                    <td>$product.price</td>
                </tr>
            #end
        </tbody>
        <!--Table body-->
    </table>
    <!--Table-->
#end
