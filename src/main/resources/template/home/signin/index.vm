#parse("/template/home/layout.vm")
#@mainLayout()

    <!-- Main content -->
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">

                        <div class="card-header text-center">
                            <b>Sign in</b> to start your session
                        </div>

                        <div class="card-body">
                            <form class="form-signin" action="/auth/sign-in" method="post">
                                <div class="row">
                                    <div class="col-6">
                                        <button type="submit" class="btn btn-secondary btn-block" autofocus>Auto - Sign in</button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-success btn-block" autofocus onclick="window.location.href='/auth/sign-certificate'">Sign in with certificate</button>
                                    </div>
                                    <!-- /.col -->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </div><!-- /.content -->

#end
