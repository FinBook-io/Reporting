#parse("/template/home/layout.vm")
#@mainLayout()

<!-- Main content -->
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">

                    <div class="card-header text-center">
                        <b>Waiting</b> for signing
                    </div>

                    <div class="card-body align-items-center d-flex justify-content-center">

                        <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <div class="spinner-grow" style="width: 3rem; height: 3rem;" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>

                        <div class="if-finbsign" data-randomtext="$textToSign">
                            <iframe src="finbsign: $textToSign ws://localhost:8080/socket"></iframe>
                        </div>
                    </div>
                    <form id="signin_form" action="/auth/sign-in" method="post">
                        <input class="form-control" name="sign" value="$textToSign" readonly>
                    </form>
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</div><!-- /.content -->

#end
